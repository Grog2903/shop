{% extends 'base.html.twig' %}

{% block body %}

    <p>Номер заказа: {{ order.id }}</p>
    <p>Ваш email: {{ order.user.email }}</p>
    <table class="table table-dark">
        <tr>
            <th>id</th>
            <th>title</th>
            <th>price</th>
            <th>quantity</th>
            <th>sum</th>
        </tr>
        {% set sum = 0 %}
    {% for product in order.orderSets %}
        <tr>
            <td>{{ product.product.id }}</td>
            <td>{{ product.product.title }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.quantity }}</td>
            <td>{{ product.quantity * product.price }}</td>
            {% set sum = sum + product.price %}
        </tr>
    {% endfor %}
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>Общая сумма</td>
            <td>{{ sum }}</td>
        </tr>
    </table>
{% endblock %}

