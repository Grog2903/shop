{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="row">
                <table class="table table-dark">
                    <tr>
                        <th>id</th>
                        <th>title</th>
                        <th>price</th>
                        <th>created</th>
                    </tr>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td><a href="{{ path('admin_product_edit', {slug: product.slug}) }}">{{ product.title }}</a></td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.createdAt|date }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
