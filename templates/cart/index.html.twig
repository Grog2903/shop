{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

    {% if(products) %}
        <table class="table table-dark">
            <tr>
                <th>id</th>
                <th>title</th>
                <th>price</th>
                <th>quantity</th>
                <th>sum</th>
            </tr>
            {% set sum = 0 %}
            {% for product in products %}
                <tr>
                    <td>{{ product.product.id }}</td>
                    <td>{{ product.product.title }}</td>
                    <td>{{ product.product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.quantity * product.product.price }}</td>
                    {% set sum = sum + product.product.price %}
                </tr>
            {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>Общая сумма</td>
                <td>{{ sum }}</td>
            </tr>
        </table>
        <div class="row">
            <div class="col text-right">
                <a href="{{ path('reset_cart') }}" class="btn btn-primary">Отчистить корзину</a>
                <a href="{{ path('order') }}" class="btn btn-success">Оформить заказ</a>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col text-center align-content-center">
               <h3>Корзина пуста</h3>
            </div>
        </div>
    {% endif %}

{% endblock %}
